<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/chat_list_other_image"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_list_other_image"
        android:layout_alignTop="@id/chat_list_other_image"
        android:background="@drawable/balloon_l"
        android:id="@+id/chat_list_other_text"
        />
    

</RelativeLayout>
